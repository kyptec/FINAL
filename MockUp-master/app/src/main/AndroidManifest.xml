<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arthur.mockup" >
    <uses-permission android:name="android.permission.INTERNET"/>   <!-- Important! to make access to internet -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu_1"
            android:label="@string/title_activity_menu_1" >
        </activity>
        <activity
            android:name=".menu_2"
            android:label="@string/title_activity_menu_2" >
        </activity>
        <activity
            android:name=".menu_3"
            android:label="@string/title_activity_menu_3" >
        </activity>
    </application>

</manifest>
